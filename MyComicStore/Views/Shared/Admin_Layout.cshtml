<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - MyComicStore</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        *:focus {
            outline: none;
        }
    </style>

</head>
<body>

    <div style="position:fixed; width:100%; height:100%; top:0; left:0">
        <div style="background-color:#343434; position:relative; width:200px; height:100%; display:inline-block; vertical-align:top">
            <div style="position:relative; width:100%; height:25%">
                
            </div>
            <div style="position:relative; width:100%; height:75%">
                @{Html.RenderAction("AdminSidebarL", "Admin");}
            </div>
        </div><!--
     --><div style="position:relative; background-color:#ffffff; width:calc(100% - 200px); height:100%; display:inline-block; vertical-align:top">
            <div style="position:relative; width:100%; height:70px;background-color:inherit; display:block">
                <div id="currentmenu" style="position:relative; margin-left:20px; width:15%; height:auto; top:50%; font-size:x-large; font-family:'Century Gothic'; font-weight:bold;" data-categoryid="1">Dashboard</div>
            </div><!--
         --><div class="admin" style="position:relative; background-color:inherit; width:100%; height:calc(100% - 70px); overflow:hidden; display:block; padding:10px">
                @RenderBody()
            </div>
        </div>

        <div class="modalbatch" style="position:absolute; background-color:rgba(0,0,0,0.5); width:100%; height:100%; z-index:3;display:none; top:0; left:0; opacity:0">
            <div class="modalbatch_1" style="position:absolute; background-color:rgba(255, 255, 255, 0.5); width:800px; height:500px; top:50%; left:50%; transform:translate(-50%, -50%); opacity:0;overflow:hidden">
                
            </div>

        </div>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>


