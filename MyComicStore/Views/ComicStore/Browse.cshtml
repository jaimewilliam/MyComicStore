@model IEnumerable<MyComicStore.Models.Comics>

<link href="~/RateYo/v2.3.2/jquery.rateyo.min.css" rel="stylesheet" />

@Styles.Render("~/bundles/comicstoreindex/ss")

<div class="motherdiv" style="position:relative; background-color:#EEEEEE; width:100%; height:100%;border-radius:10px; padding:10px; overflow-y:auto">
    @foreach (var comic in Model)
    {
        <div style="position: relative; width:170px; height:250px;display:inline-block; vertical-align:top;background-color:inherit;margin:5px">

            <div class="imgdiv" id="imgid" onclick="loadDetails($(this));" style="position:relative; width:100%; height:100%; overflow:hidden" data-comicid="@comic.ComicId">
                <div class="imgdiv1" style="position: relative; background-image: url('@comic.ImgUrl'); background-size:contain; background-position: center; background-repeat:no-repeat; width:100%; height:100%;display:inline-block; vertical-align:top; background-color:#000000">
                    <div class="details" style="background-color:rgba(0,0,0,0.5);position:relative; width:100%; height:30%; z-index:1; ">
                        <div style="position:relative; width:100%; height:34%; text-align:center; color:#ffffff; font-family:'Century Gothic'">
                            <span>@comic.Title</span>
                            @*@Html.ActionLink(comic.Title, "Details", new { id = comic.ComicId })*@
                        </div>
                        <div style="position:relative; width:100%; height:33%; text-align:center; color:#ffffff; font-family:'Century Gothic'">
                            <em>Php:</em> @String.Format("{0:F}", comic.Price)
                        </div>
                        <div style="position:relative; width:100%; height:33%;">
                            <div class="ratinghere" data-comicrates="@comic.TotalRatings" style="position:relative; width:100%; height:100%; top:50%; left:50%; transform:translate(-50%, -50%)"></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/RateYo/v2.3.2/jquery.rateyo.min.js"></script>
@Scripts.Render("~/bundles/comicstorescript/js")




