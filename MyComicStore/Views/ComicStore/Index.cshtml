@model IEnumerable<MyComicStore.Models.Categories>
@{ 
    string Cookie = ViewBag.Cookie;
}


<style>
    .adminclass {
        background-color: #2a2a2a;
        position: relative;
        width: 100%;
        height: 100%;
        font-size: large;
        color: #fff;
        text-decoration: none;
    }

    .adminclass {
        border: 1px solid transparent;
        -webkit-transition: all 0.4s cubic-bezier(.5, .24, 0, 1);
        transition: all 0.4s cubic-bezier(.5, .24, 0, 1);
    }

        .adminclass::before {
            content: '';
            position: absolute;
            left: 0px;
            bottom: 0px;
            /*z-index: -1;*/
            z-index: 0;
            width: 0%;
            height: 1px;
            background: rgba(39, 192, 210, 0.5);
            box-shadow: inset 0px 0px 0px #6098FF;
            display: block;
            -webkit-transition: all 0.4s cubic-bezier(.5, .24, 0, 1);
            transition: all 0.4s cubic-bezier(.5, .24, 0, 1)
        }

        .adminclass:hover::before {
            width: 100%;
        }

        .adminclass::after {
            content: '';
            position: absolute;
            right: 0px;
            top: 0px;
            /*z-index: -1;*/
            z-index: 0;
            width: 0%;
            height: 1px;
            background: rgba(39, 192, 210, 0.5);
            -webkit-transition: all 0.4s cubic-bezier(.5, .24, 0, 1);
            transition: all 0.4s cubic-bezier(.5, .24, 0, 1)
        }

        .adminclass:hover::after {
            width: 100%;
        }

        .adminclass:hover {
            border-left: 1px solid rgba(39, 192, 210, 0.5);
            border-right: 1px solid rgba(39, 192, 210, 0.5);
        }
</style>

<div style="background-color:#343434; position:relative; width:100%; height:85%;">
    @foreach (var category in Model)
    {
        <div id="btncat" class="categoryitem" style="text-align:left; font-size:large; font-family:'Century Gothic'; color:#ffffff; width:100%; height:auto;padding:10px;cursor:pointer; border-top:1px solid rgba(39, 192, 210, 0.5); border-bottom:1px solid rgba(39, 192, 210, 0.5); margin-bottom:5px" data-categoryid="@category.CategoryId">
            <span class="categoryspan">@category.Name</span>

            @*@Html.ActionLink(category.Name, "Browse", "ComicStore", new { categoryId = category.CategoryId }, new { @class = "my-class" })*@
            @*<a href="@Url.Action("Browse","ComicStore", new { categoryId = category.CategoryId })" class="my-class" style="width:100%;background-color:#ff0000">@category.Name</a>*@
        </div>
    }

</div>
<div id="btnadmindiv" style="background-color:#343434; position:relative; width:100%; height:15%; padding:10px; display:block">
    @if (Cookie != null && Cookie != "3")
    {
        <button class="adminclass" id="btnadmin" onclick="admin(this);" type="button" value="" style=""><i class="fa fa-lock"></i>   Admin</button>
    }
</div>

@Styles.Render("~/bundles/comicstoreindex/ss")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/comicstorescript/js")




