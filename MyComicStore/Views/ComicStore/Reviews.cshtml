@model IEnumerable<MyComicStore.Models.Reviews>

<link href="~/RateYo/v2.3.2/jquery.rateyo.min.css" rel="stylesheet" />


<div style="position: relative; width:100% ; height: 100%; top:0; left:0; padding:5px">
    @foreach (var item in Model)
    {
        <div style="background-color:#f0f0fa;position:relative; width:100%; height:100%; max-height:100%; border-radius:10px; margin-bottom:10px; overflow:hidden">
            <div style="position:relative; width:100%; height:25%">
                <div style="position:relative; width:100%; height:50%">
                    <div style="position:relative; width:50%; height:100%; display:inline-block; vertical-align:top; padding:5px">
                        <div style="position:relative; width:auto; height:auto"><span>@item.ReviewTitle</span></div>
                    </div><!--
                 --><div style="position:relative; width:50%; height:100%; display:inline-block; vertical-align:top; padding:5px; color:#a5a4a9">
                        <div style="position:relative; width:100%; height:auto; float:right"><span style="float:right">@item.ReviewDate</span></div>
                    </div>
                </div>
                <div style="position:relative; width:100%; height:50%">
                    <div style="position:relative; width:50%; height:100%; display:inline-block; vertical-align:top">
                        <div style="position:relative; width:100%; height:auto; float:right"><span class="rate" data-rating="@item.Rating"></span></div>
                    </div><!--
                 --><div style="position:relative; width:50%; height:100%; display:inline-block; vertical-align:top; padding:5px; color:#a5a4a9">
                        <div style="position:relative; width:100%; height:auto; float:right"><span style="float:right">@item.ReviewerName</span></div>
                    </div>
                </div>
            </div>
            <div style="position:relative; width:100%; height:75%; padding:5px">
                <span>@item.ReviewMessage</span>
            </div>
        </div>
    }
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/RateYo/v2.3.2/jquery.rateyo.min.js"></script>

<script>
    var rate = $(".rate").attr('data-rating');

    $(".rate").rateYo({
        starWidth: "10px",
        rating: rate,
        normalFill: "#A0A0A0",
        ratedFill: "#F39C12",
        numStars: 5,
        maxValue: 5,
        halfStar: true,
        readOnly: true
    });
</script>