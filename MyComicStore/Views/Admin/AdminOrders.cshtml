@model IEnumerable<MyComicStore.Models.OrderStatus>

@{
    ViewBag.Title = "AdminOrders";
    Layout = null;
}

<link href="~/Plugins/fontawesome/css/font-awesome.min.css" rel="stylesheet" />

<div id="orders" style="background-color:inherit; position:relative; width:100%; height:100%; top:0; left:0; padding:15px">
    @foreach (var status in Model)
    {
        <div style="border:1px solid #cccccc; border-radius:5px; box-shadow:0px 0px 5px 5px #cccccc; position:relative; width:calc((100% / @Model.Count()) - 25px); height:100%; vertical-align:top; display:inline-block; margin:10px; padding:10px">
            <div style="position:relative; width:100%; height:10%">
                <div style="position:relative; width:auto; height:50%; top:50%; left:50%; transform:translate(-50%, -50%)">
                    <span style="font-size:large; font-family:'Century Gothic'; font-weight:bold">@status.Status</span>
                </div>
            </div>
            <div style="position:relative; width:100%; height:90%">
                @{Html.RenderAction("AdminBatchOrders", "Admin", new { orderStatusId = status.OrderStatusId });}
            </div>
        </div>
    }
</div>

@Scripts.Render("~/bundles/jquery")
